{
  "dashboard": {
    "title": "Container Monitoring",
    "tags": ["docker", "cadvisor"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\".+\"}[1m]) * 100",
            "legendFormat": "{{ name }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU Usage"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\".+\"}",
            "legendFormat": "{{ name }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\".+\"}[1m])",
            "legendFormat": "{{ name }} - RX",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\".+\"}[1m])",
            "legendFormat": "{{ name }} - TX",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "Bps",
            "label": "Bytes/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "Filesystem Usage",
        "type": "graph",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "container_fs_usage_bytes{name=~\".+\"}",
            "legendFormat": "{{ name }}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Storage"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "title": "Container Count",
        "type": "singlestat",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "count(container_last_seen{name=~\".+\"})",
            "refId": "A"
          }
        ],
        "valueName": "current"
      },
      {
        "id": 6,
        "title": "Total Memory Usage",
        "type": "singlestat",
        "gridPos": {
          "x": 6,
          "y": 16,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{name=~\".+\"})",
            "refId": "A"
          }
        ],
        "format": "bytes",
        "valueName": "current"
      }
    ]
  },
  "overwrite": true
}
